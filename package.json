{
  "name": "tddbin-frontend",
  "version": "0.0.1",
  "description": "TDDbin.com UI components (and examples)",
  "main": "index.js",
  "scripts": {
    "build": "./scripts/build/build.sh",

    "build-app": "browserify html/index.js --outfile=dist/index.js --transform=reactify --transform=babelify",
    "watch-app": "watchify html/index.js --outfile=dist/index.js --transform=reactify --transform=babelify -v",
    "start": "watchify html/index.js --outfile=dist/index.js --transform=reactify --transform=babelify -v",

    "build-jasmine-spec-runners": "browserify src/test-runner/jasmine/spec-runner.js --outfile=dist/jasmine/spec-runner.js --transform=reactify --transform=babelify",
    "watch-jasmine-spec-runners": "watchify src/test-runner/jasmine/spec-runner.js --outfile=dist/jasmine/spec-runner.js --transform=reactify --transform=babelify -v",

    "build-mocha-spec-runners": "browserify src/test-runner/mocha/spec-runner.js --outfile=dist/mocha/spec-runner.js --transform=reactify --transform=babelify",
    "watch-mocha-spec-runners": "watchify src/test-runner/mocha/spec-runner.js --outfile=dist/mocha/spec-runner.js --transform=reactify --transform=babelify -v",

    "build-spec-runners": "npm run build-mocha-spec-runners && npm run build-jasmine-spec-runners",
    "build-ace": "mkdir -p dist/vendor/ace; cp -r node_modules/ace-with-plugins/vendor/ace/* dist/vendor/ace",
    "build-css": "./scripts/build/copy-media-files.sh",
    "lint": "jsxcs --preset google src",
    "test": "mocha --compilers js:babel/register src/**/**/*spec.js"
  },
  "browserify": {
    "extension": [
      "jsx"
    ],
    "transform": [
      [
        "reactify",
        "babelify"
      ]
    ]
  },
  "keywords": [
    "tddbin",
    "tdd",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/uxebu/tddbin-frontend/issues"
  },
  "author": "uxebu",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "ace-with-plugins": "git://github.com/uxebu/ace-with-plugins.git",
    "browserify": "^9.0.3",
    "jsxcs": "^0.2.1",
    "reactify": "^1.0.0",
    "watchify": "^2.3.0",
    "referee": "^1.1.1",
    "babel": "^4.3.0",
    "babelify": "^5.0.3",
    "react": "^0.13.0-rc2",
    "mocha": "^2.1.0",
    "sinon": "^1.12.2",
    "should": "^5.0.1",
    "atomic": "git+https://github.com/toddmotto/atomic.git"
  }
}
